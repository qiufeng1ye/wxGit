page{
    background-color: lightskyblue;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.nav{
    height: 200rpx;
    width: 100%;
}
.canvas{
    height: 100%;
    width: 100%;
}
.item{
    height: 200rpx;
    font-style: normal;
    font-size: 300%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.wrapper{
    height: 150rpx;
    color: #fff;
}
.wrapper text{
    height: 50rpx;
    width: 600rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:  flex-start;
}
.wrapper button{
    margin: 10rpx;
}